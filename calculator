print("~ ~ ~ ~ ~ ~ ~ ~ Calculator~ ~ ~ ~ ~ ~ ~")
Num1=int(input("Enter First Number "))
Num2=int(input("Enter Second Number "))
print("What action do you want to perform?")
print("Press 1 or + for Addition ")
print("Press 2 or - for Subtraction")
print("Press 3 or / for Divition")
print("Press 4 or * for Multiply")
opt= input("Enter Choice :")
if opt == "1" :
 result = Num1 + Num2
 print("Result:",result)     
elif opt == "2":
 result = Num1 - Num2
 print("Result:",result)     
elif opt =="3":
 result=Num1/Num2
 print("Result:",result)     
elif opt =="4":
 result=Num1*Num2
 print("Result:",result)         
else:
 print("Invalid!!")


